<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="taskboard.ui.admin.UserManagementController"
            styleClass="root">
    
    <stylesheets>
        <URL value="@admin-styles.css" />
    </stylesheets>

    <top>
        <HBox spacing="30" alignment="CENTER_LEFT">
            <padding>
                <Insets top="30" right="50" bottom="20" left="20"/>
            </padding>

            <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../image/logo.png" />
                </image>
            </ImageView>

            <VBox spacing="20" HBox.hgrow="ALWAYS" alignment="CENTER">
                
                <HBox alignment="CENTER">
                    <Label text="User Management" styleClass="header-title"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="txtSearch" promptText="Search user by name or username..." 
                                   prefWidth="400" />
                        <Button text="Search" onAction="#handleSearch" styleClass="button-secondary"/>
                    </HBox>

                    <Region HBox.hgrow="ALWAYS" />
                    
                    <Button text="Create User" fx:id="btnCreateUser" 
                            styleClass="button-primary"
                            onAction="#handleCreateUser"/>
                </HBox>
            </VBox>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableUsers">
            <padding>
                <Insets top="10" right="50" bottom="40" left="50"/> 
            </padding>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" maxWidth="70"/>
                <TableColumn fx:id="colUsername" text="Username"/>
                <TableColumn fx:id="colFullName" text="Full Name"/>
                <TableColumn fx:id="colEmail" text="Email"/>
                <TableColumn fx:id="colRole" text="Role" visible="false"/> 
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120" maxWidth="150"/>
                <TableColumn fx:id="colAction" text="Actions" sortable="false" prefWidth="150" maxWidth="200"/>
            </columns>
        </TableView>
    </center>
</BorderPane>