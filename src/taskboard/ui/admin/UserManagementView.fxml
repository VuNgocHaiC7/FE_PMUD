<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="taskboard.ui.admin.UserManagementController"
            styleClass="root"> <stylesheets>
        <URL value="@../../style/style.css" />
    </stylesheets>

    <top>
        <VBox spacing="20"> <padding>
                <Insets top="30" right="40" bottom="30" left="40"/> </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="User Management" styleClass="header-title"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button text="Create User" fx:id="btnCreateUser" 
                        styleClass="button-primary"
                        onAction="#handleCreateUser"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearch" promptText="Search user by name or username..." prefWidth="350"/>
                
                <Button text="Search" onAction="#handleSearch" styleClass="button-secondary"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableUsers">
            <padding>
                <Insets right="40" left="40" bottom="40"/> </padding>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60" maxWidth="80" styleClass="centered-cell"/>
                <TableColumn fx:id="colUsername" text="Username"/>
                <TableColumn fx:id="colFullName" text="Full Name"/>
                <TableColumn fx:id="colEmail" text="Email"/>
                <TableColumn fx:id="colRole" text="Role"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100" maxWidth="120" styleClass="centered-cell"/>
                <TableColumn fx:id="colAction" text="Actions" sortable="false" prefWidth="140" maxWidth="160" styleClass="centered-cell"/>
            </columns>
        </TableView>
    </center>
</BorderPane>